	"chat.tools.edits.autoApprove": {
		"**/.git/**": false,
		"**/.vscode/*.json": false,
		"**/{package.json,package-lock.json,server.xml,build.rs,web.config,.gitattributes,.env}": false,
		"**/*": true,
		"**/*.{code-workspace,csproj,fsproj,vbproj,vcxproj,proj,targets,props}": false,
	},
	"chat.tools.todos.showWidget": true,
	"chat.useAgentSkills": true,

	"editor.acceptSuggestionOnCommitCharacter": true,
	"editor.acceptSuggestionOnEnter": "on",
	"editor.codeActionsOnSave": {
		"source.addMissingImports": "explicit",
		"source.addMissingImports.ts": "explicit",
		"source.fixAll.biome": "explicit",
		"source.fixAll.oxc": "explicit",
		"source.organizeImports": "never",
		"source.organizeImports.biome": "explicit",
		"source.removeUnusedImports": "explicit",
	},

	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnSave": true,
	"editor.quickSuggestions": {
		"comments": "off",
		"other": "on",
		"strings": "on",
	},

	"files.associations": {
		".oxfmtrc.json": "jsonc",
		".oxlintrc.json": "jsonc",
		".zed/settings.json": "jsonc",
		"*.code-workspace": "jsonc",
		"tsconfig*.json": "jsonc",
	},
	"files.defaultLanguage": "typescript",

	"git.openRepositoryInParentFolders": "always",

	"github.copilot.chat.commitMessageGeneration.instructions": [
		{
			"text": "Strictly follow Conventional Commits: `<type>(<scope>): <subject>`. Types: feat, fix, refactor, docs, style, test, chore, perf, build, ci, revert. Scopes: benchmarks, classes, commands, components, constants, contexts, functions, hooks, logging, meta, prompts, providers, types, utilities, validators, deps, release, repo. Rules: Use imperative mood, lowercase subject start, no trailing period, and 72 char limit.",
		},
	],

	"js/ts.experimental.useTsgo": true,
	"js/ts.preferences.autoImportSpecifierExcludeRegexes": ["^(node:)?os$"],

	"npm.packageManager": "bun",
	"npm.scriptRunner": "bun",

	"oxc.enable": true,
	"oxc.fixKind": "safe_fix",
	"oxc.lint.run": "onType",
	"oxc.typeAware": true,
	"oxc.unusedDisableDirectives": "deny",
}
