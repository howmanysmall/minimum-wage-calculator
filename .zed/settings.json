{
	"auto_indent": true,
	"code_actions_on_format": {
		"source.fixAll": true,
		"source.organizeImports": true
	},
	"edit_predictions": {
		"codestral": {},
		"copilot": {
			"enable_next_edit_suggestions": true
		},
		"enabled_in_text_threads": true,
		"mode": "eager"
	},
	"ensure_final_newline_on_save": true,
	"file_types": {
		"JSONC": [
			"tsconfig.json",
			"jsconfig.json",
			".vscode/*.json",
			".oxfmtrc.json",
			".oxlintrc.json",
			"*.code-workspace",
			"tsconfig*.json",
			"*.code-snippets"
		],
		"Shell Script": ["zsh", "zshrc", "zprofile", "zshenv", "bashrc", "bash_profile"],
		"TOML": ["toml"],
		"YAML": ["*.yml", "*.yaml", ".github/workflows/*.yml", ".github/workflows/*.yaml"]
	},
	"format_on_save": "on",
	"hard_tabs": true,
	"indent_guides": {
		"active_line_width": 1,
		"background_coloring": "disabled",
		"coloring": "indent_aware",
		"enabled": true,
		"line_width": 1
	},
	"inlay_hints": {
		"edit_debounce_ms": 700,
		"enabled": true,
		"scroll_debounce_ms": 50,
		"show_other_hints": true,
		"show_parameter_hints": true,
		"show_type_hints": true
	},
	"languages": {
		"JSON": {
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"format_on_save": "on",
			"formatter": { "language_server": { "name": "biome" } },
			"hard_tabs": true,
			"language_servers": ["biome", "..."],
			"tab_size": 4
		},
		"JSONC": {
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"format_on_save": "on",
			"formatter": { "language_server": { "name": "biome" } },
			"hard_tabs": true,
			"language_servers": ["biome", "..."],
			"tab_size": 4
		},
		"Markdown": {
			"format_on_save": "on",
			"formatter": [{ "language_server": { "name": "rumdl" } }],
			"hard_tabs": true,
			"language_servers": ["!marksman", "!markdownlint", "rumdl", "..."],
			"show_whitespaces": "none",
			"soft_wrap": "editor_width",
			"tab_size": 4
		},
		"Shell Script": {
			"format_on_save": "on",
			"formatter": {
				"external": {
					"arguments": ["-i", "4", "-bn", "-ci", "-sr"],
					"command": "shfmt"
				}
			},
			"hard_tabs": true,
			"language_servers": ["bash-language-server", "..."],
			"tab_size": 4
		},
		"TOML": {
			"format_on_save": "on",
			"formatter": "language_server",
			"hard_tabs": true,
			"tab_size": 4
		},
		"TSX": {
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.fixAll.oxc": true,
				"source.organizeImports.biome": true
			},
			"format_on_save": "on",
			"formatter": [{ "language_server": { "name": "biome" } }, { "language_server": { "name": "oxfmt" } }],
			"hard_tabs": true,
			"language_servers": [
				"!tailwindcss-language-server",
				"oxfmt",
				"!typescript-language-server",
				"!eslint",
				"tsgo",
				"vtsls",
				"..."
			],
			"prettier": {
				"allowed": false
			},
			"tab_size": 4
		},
		"TypeScript": {
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.fixAll.oxc": true,
				"source.organizeImports.biome": true
			},
			"format_on_save": "on",
			"formatter": [{ "language_server": { "name": "oxfmt" } }],
			"hard_tabs": true,
			"language_servers": [
				"!tailwindcss-language-server",
				"oxfmt",
				"!typescript-language-server",
				"!eslint",
				"tsgo",
				"vtsls",
				"..."
			],
			"prettier": {
				"allowed": false
			},
			"tab_size": 4
		},
		"YAML": {
			"format_on_save": "on",
			"formatter": [{ "language_server": { "name": "oxfmt" } }],
			"hard_tabs": false,
			"prettier": { "allowed": false },
			"tab_size": 2
		}
	},
	"lsp": {
		"bash-language-server": {
			"settings": {
				"bashIde": { "globPattern": "**/*@(.sh|.inc|.bash|.command|.zsh)" }
			}
		},
		"biome": {
			"binary": {
				"arguments": ["x", "--bun", "biome", "lsp-proxy"],
				"path": "bun"
			},
			"settings": {
				"biome": {
					"configurationPath": "./biome.jsonc",
					"rename": true,
					"requireConfiguration": true
				}
			}
		},
		"oxfmt": {
			"initialization_options": {
				"settings": {
					"configPath": "./.oxfmtrc.json"
				}
			}
		},
		"oxlint": {
			"initialization_options": {
				"settings": {
					"configPath": "./.oxlintrc.json",
					"disableNestedConfig": false,
					"fixKind": "safe_fix",
					"run": "onType",
					"typeAware": true,
					"unusedDisableDirectives": "deny"
				}
			}
		},
		"vtsls": {
			"enable_lsp_tasks": true,
			"initialization_options": {
				"javascript": {
					"inlayHints": {
						"enumMemberValues": {
							"enabled": true
						},
						"functionLikeReturnTypes": {
							"enabled": true
						},
						"parameterNames": {
							"enabled": "all",
							"suppressWhenArgumentMatchesName": false
						},
						"parameterTypes": {
							"enabled": true
						},
						"propertyDeclarationTypes": {
							"enabled": true
						},
						"variableTypes": {
							"enabled": false
						}
					}
				},
				"tsserver": {
					"maxTsServerMemory": 8192
				},
				"typescript": {
					"inlayHints": {
						"enumMemberValues": {
							"enabled": true
						},
						"functionLikeReturnTypes": {
							"enabled": true
						},
						"parameterNames": {
							"enabled": "all",
							"suppressWhenArgumentMatchesName": false
						},
						"parameterTypes": {
							"enabled": true
						},
						"propertyDeclarationTypes": {
							"enabled": true
						},
						"variableTypes": {
							"enabled": false
						}
					},
					"preferences": {
						"includePackageJsonAutoImports": "on"
					},
					"suggest": {
						"autoImports": true
					},
					"updateImportsOnFileMove": "always"
				}
			},
			"settings": {
				"javascript": {
					"inlayHints": {
						"enumMemberValues": {
							"enabled": true
						},
						"functionLikeReturnTypes": {
							"enabled": true
						},
						"parameterNames": {
							"enabled": "all",
							"suppressWhenArgumentMatchesName": false
						},
						"parameterTypes": {
							"enabled": true
						},
						"propertyDeclarationTypes": {
							"enabled": true
						},
						"variableTypes": {
							"enabled": false
						}
					},
					"suggest": {
						"autoImports": true
					},
					"tsserver": {
						"maxTsServerMemory": 8192
					},
					"updateImportsOnFileMove": "always"
				},
				"typescript": {
					"inlayHints": {
						"enumMemberValues": {
							"enabled": true
						},
						"functionLikeReturnTypes": {
							"enabled": true
						},
						"parameterNames": {
							"enabled": "all",
							"suppressWhenArgumentMatchesName": false
						},
						"parameterTypes": {
							"enabled": true
						},
						"propertyDeclarationTypes": {
							"enabled": true
						},
						"variableTypes": {
							"enabled": false
						}
					},
					"suggest": {
						"autoImports": true
					},
					"tsserver": {
						"maxTsServerMemory": 8192
					},
					"updateImportsOnFileMove": "always"
				}
			}
		}
	},
	"remove_trailing_whitespace_on_save": true,
	"show_completions_on_input": true,
	"show_edit_predictions": true,
	"tab_size": 4,
	"terminal": {
		"working_directory": "current_project_directory"
	},
	"use_on_type_format": true
}
